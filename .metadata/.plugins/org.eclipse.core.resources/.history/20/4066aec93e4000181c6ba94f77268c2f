package helperPackage;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.firefox.FirefoxDriver;
import org.openqa.selenium.ie.InternetExplorerDriver;

public class BrowserFactory {
	
	//Global driver
	public static WebDriver driver;
	
	//A custom method to choose the browser on which the test need to be executed
	public static void startBrowser(String browserName, String url)
	{
		//choose Firefox browser
		if (browserName.equalsIgnoreCase("firefox"))
		{
			System.setProperty("webdriver.chrome.driver", "C:/Users/Kumar/Desktop/chromedriver_win32 (3)/chromedriver.exe");
			driver = new FirefoxDriver();
		}
		//choose Chrome browser
		else if (browserName.equalsIgnoreCase("chrome"))
		{
			System.setProperty("webdriver.chrome.driver", "C:/Users/Kumar/Desktop/chromedriver_win32 (3)/chromedriver.exe");
			driver = new ChromeDriver();
		}
		//choose IE browser
		if (browserName.equalsIgnoreCase("ie"))
		{
			System.setProperty("webdriver.chrome.driver", "C:/Users/Kumar/Desktop/chromedriver_win32 (3)/chromedriver.exe");
			driver = new InternetExplorerDriver();
		}
		
		//maximize browser
		driver.manage().window().maximize();
		
		//launch the url
		driver.get(url);
				
	}

}
